{
	"compilerOptions": {
		"target": "ES2020", // Specify ECMAScript target
		"module": "CommonJS", // Use CommonJS modules
		"outDir": "./dist", // Output directory for compiled files
		"rootDir": "./src", // Root directory for source files
		"strict": true, // Enable all strict type-checking options
		"resolveJsonModule": true,
		"esModuleInterop": true, // Enable compatibility with CommonJS and ES Modules
		"skipLibCheck": true, // Skip type checking of declaration files
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"], // Include files in the `src` folder
	"exclude": ["node_modules"] // Exclude `node_modules` folder
}
